<script type="text/javascript">

        function bindEventos() {
            configurarMascaras();
            $('.Carregando').hide();
            $('.OK').hide();

            $('.form-signin').submit(function () {
                $('.Carregando').show();
            });

            @if (TempData["sucess"] != null) {
                <text>$('.OK').show().delay(3000).slideUp(500);</text>
            }

        }

        function configurarMascaras() {
            $('.cnpj-mask').mask('99.999.999/9999-99');
        }

        $(function () {
            bindEventos();
        });

</script>
