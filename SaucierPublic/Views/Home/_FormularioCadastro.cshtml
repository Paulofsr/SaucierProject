@model SaucierLibrary.ClienteBase.Cadastro

@*@using (Ajax.BeginForm("Cadastrar", "Home", new AjaxOptions { HttpMethod = "POST", LoadingElementId = "divCarregando", OnBegin = "beginSalvarCadastro", OnSuccess = "successSalvarCadastro", OnFailure = "failureSalvarCadastro" }, new { id = "frmSalvar", @class = "form-horizontal" }))*@

    <div class="row">
        <div class="col-xs-10">
            <div class="panel panel-success" id="filtros-panel">
                <div class="panel-heading">
                    <h3 class="panel-title">CADASTRE</h3>
                </div>
                <div id="filtros-body" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12">
@using (Html.BeginForm("Cadastrar", "Home", FormMethod.Post, new { id = "frmSalvar", @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CriadoEm)
                                <div class="alert alert-danger" id="divMensagemErro"> 
                                    @Html.ValidationSummary(false)
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-2">
                                        @Html.LabelFor(m => m.Nome, new { @class = "control-label label-sm" })
                                    </div>
                                    <div class="col-xs-4">
                                        @Html.TextBoxFor(m => m.Nome, null, new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-2">
                                        @Html.LabelFor(m => m.Email, new { @class = "control-label label-sm" })
                                    </div>
                                    <div class="col-xs-4">
                                        @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-2">
                                        @Html.LabelFor(m => m.Senha, new { @class = "control-label label-sm" })
                                    </div>
                                    <div class="col-xs-4">
                                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-2">
                                        @Html.LabelFor(m => m.Estabelecimento, new { @class = "control-label label-sm" })
                                    </div>
                                    <div class="col-xs-4">
                                        @Html.TextBoxFor(m => m.Estabelecimento, null, new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-2">
                                        @Html.LabelFor(m => m.CNPJ, new { @class = "control-label label-sm" })
                                    </div>
                                    <div class="col-xs-4">
                                        @Html.TextBoxFor(m => m.CNPJ, null, new { @class = "form-control input-sm cnpj-mask" })
                                    </div>
                                </div>
}
                                <br />
                                <div class="row">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-2"></div>
                                    <div class="col-xs-2"></div>
                                    <div class="col-xs-2">
                                        <input type="button" class="btn btn-success btn-block" id="btnCadastrar" name="btnProcessarMulta" value="Cadastrar" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>